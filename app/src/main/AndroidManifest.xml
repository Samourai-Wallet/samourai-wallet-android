<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.masanari.wallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.telephony" android:required="false" tools:node="replace"/>
    <uses-feature android:name="android.hardware.usb.host" android:required="false" tools:node="replace"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" tools:node="replace"/>
    <uses-feature android:name="android.hardware.faketouch" android:required="false" tools:node="replace"/>
    <uses-feature android:name="android.hardware.screen.landscape" android:required="false" tools:node="replace"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="false"
        >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="bitcoin" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".Launcher"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity android:name=".MainActivity2"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan"
            >
        </activity>

        <activity android:name=".BalanceActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".ReceiveActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateVisible|adjustPan"
            >
        </activity>

        <activity android:name=".SendActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".UTXOActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".BatchSendActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".FeeActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".SettingsActivity2"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".AboutActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            >
        </activity>

        <activity android:name=".PinEntryActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".bip47.BIP47Activity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".bip47.BIP47Add"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".bip47.BIP47ShowQR"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".ricochet.RicochetActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".OpenDimeActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <activity android:name=".bip47.paynym.ClaimPayNymActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".ExodusActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".PayNymCalcActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity android:name=".AddressCalcActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

        <activity
            android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />

        <service android:enabled="true" android:name=".service.WebSocketService" />

        <service android:enabled="true" android:name=".service.RefreshService" />

        <receiver android:name=".receivers.BootIntentReceiver" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.InterceptOutgoingReceiver" android:enabled="true" android:exported="true">
            <intent-filter android:priority="1001">
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.SMSReceiver" android:enabled="true" android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name="com.masanari.wallet.CreateWalletActivity" />
        <activity android:name="com.masanari.wallet.RestoreSeedWalletActivity" />
        <activity
            android:name="com.masanari.wallet.LandingActivity"
            android:theme="@style/AppThemeLanding"
            ></activity>
        <activity android:name=".RecoveryWordsActivity">
        </activity>
        <activity android:theme="@style/AppThemeLanding" android:exported="true" android:name="com.masanari.wallet.TxAnimUIActivity" />

        <provider
            android:name=".util.GenericFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <activity
            android:name=".spend.SendNewUIActivity"
            android:exported="true"
            android:theme="@style/ui_2_theme" />
        <activity
            android:name=".whirlpool.WhirlPoolActivity"
            android:exported="true"
            android:label=""
            android:parentActivityName=".whirlpool.ChooseCycleType"
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".whirlpool.EmptyWhirlPool"
            android:exported="true"
            android:label="@string/title_activity_empty_whirl_pool"
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".whirlpool.NewWhirlpoolCycle"
            android:exported="true"
            android:label="New Cycle"
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".whirlpool.ChooseCycleType"
            android:exported="true"
            android:label="New Cycle"
            android:parentActivityName=".whirlpool.EmptyWhirlPool"
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".whirlpool.WhirlpoolMain"
            android:exported="true"
            android:label=""
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".whirlpool.CycleDetail"
            android:label=""
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".tx.TxDetailsActivity"
            android:exported="true"
            android:label=" "
            android:theme="@style/whirlpool_theme" />
        <activity
            android:name=".tx.TxPrivacyDetailsActivity"
            android:exported="true"
            android:label=""
            android:theme="@style/whirlpool_theme" />


    </application>

</manifest>