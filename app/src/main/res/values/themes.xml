<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Samourai.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Samourai.Toolbar</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="statusBarBackground">@color/grey_accent</item>
        <item name="android:windowBackground">@color/windowDark</item>
        <item name="android:statusBarColor">@color/grey_accent</item>
        <item name="backgroundColor">@color/windowDark</item>
        <item name="background">@color/windowDark</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:navigationBarColor">@color/windowDark</item>
        <item name="android:actionModeBackground">@color/grey_accent</item>
        <item name="actionModeBackground">@color/grey_accent</item>
        <item name="tabBackground">@color/grey_accent</item>
        <item name="snackbarStyle">@style/Widget.Samourai.SnackBar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="materialAlertDialogTheme">@style/Theme.Samourai.MaterialDialog.Rounded</item>
    </style>

    <style name="Theme.Samourai.Whirlpool.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Samourai.Whirlpool.Toolbar</item>
        <item name="colorAccent">@color/whirlpoolBlue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/whirlpoolBlue</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <item name="statusBarBackground">@color/whirlpoolBlue</item>
        <item name="android:windowBackground">@color/windowDark</item>
        <item name="android:statusBarColor">@color/whirlpoolBlue</item>
        <item name="backgroundColor">@color/windowDark</item>
        <item name="background">@color/windowDark</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:navigationBarColor">@color/windowDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/statusBarBackground</item>
        <item name="actionModeBackground">?attr/statusBarBackground</item>
        <item name="tabBackground">@color/grey_accent</item>
        <item name="snackbarStyle">@style/Widget.Samourai.SnackBar</item>
        <item name="materialAlertDialogTheme">@style/Theme.Samourai.MaterialDialog.Rounded</item>
    </style>

    <style name="SamouraiAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SamouraiAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SamouraiAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>