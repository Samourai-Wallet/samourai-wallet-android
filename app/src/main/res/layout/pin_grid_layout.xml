<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.samourai.wallet.view.PinGridLayout
        android:id="@+id/pin_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="3" >

        <Button android:id="@+id/ta"
            style="@style/grid_item"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/tb"
            style="@style/grid_item"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/tc"
            style="@style/grid_item"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/td"
            style="@style/grid_item"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/te"
            style="@style/grid_item"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/tf"
            style="@style/grid_item"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/tg"
            style="@style/grid_item"
            android:layout_row="2"
            android:layout_column="0"
            android:text="7"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/th"
            style="@style/grid_item"
            android:layout_row="2"
            android:layout_column="1"
            android:text="8"
            tools:ignore="HardcodedText" />
        <Button android:id="@+id/ti"
            style="@style/grid_item"
            android:layout_row="2"
            android:layout_column="2"
            android:text="9"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/tback"
            android:layout_width="@dimen/grid_item_size"
            android:layout_height="@dimen/grid_item_size"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/ic_backspace_white"
            android:background="@android:color/transparent"
            android:contentDescription="@string/backspace_btn_description" />

        <Button
            android:id="@+id/tj"
            style="@style/grid_item"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0"
            tools:ignore="HardcodedText" />
    </com.samourai.wallet.view.PinGridLayout>

</FrameLayout>
